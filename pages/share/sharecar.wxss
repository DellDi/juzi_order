/* pages/my/sharecar.wxss */

page {
  background-color: #ededed;
}

.detail {
  width: 85%;
  height: 90%;
  margin: 0;
  padding: 8% 7.5%;
  padding-bottom: 750rpx;
}

.hidden {
  display: none;
}

.content {
  border-radius: 25rpx;
  width: 100%;
  height: 260rpx;
  margin-bottom: 55rpx;
}

.content-center {
  display: flex;
  justify-content: space-between;
  position: relative;
  width: 100%;
  height: 200rpx;
}

.content-center image {
  position: absolute;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  top: 40rpx;
  right: 80rpx;
}

.content-center-left {
  margin-left: 80rpx;
  width: 160rpx;
  height: 100%;
  font-size: 45rpx;
  line-height: 250rpx;
  color: white;
}

.content-center-right {
  margin-top: 65rpx;
  text-align: center;
  font-weight: bold;
}

.money {
  font-size: 80rpx;
}

.content-center-right-list {
  width: 300rpx;
  height: 35rpx;
  font-size: 26rpx;
  color: #fff;
  margin-right: 5rpx;
}

.style {
  font-size: 35rpx;
  margin-bottom: 10rpx;
}

.content-fotter {
  width: 100%;
  height: 60rpx;
  padding: 0 3% 0 3%;
  font-size: 28rpx;
  line-height: 58rpx;
  margin-bottom: 20rpx;
}

.use {
  font-size: 26rpx;
  margin-left: 20rpx;
}

button {
  width: 300rpx;
  height: 80rpx;
  background-color: #93cfe7;
  font-size: 35rpx;
  color: white;
  line-height: 70rpx;
  box-shadow: 1rpx 1rpx 6rpx 1rpx #9d9e9e;
}
