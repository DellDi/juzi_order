/* pages/shop/storedetails.wxss */

.container {
  width: 100%;
  height: 100%;
  padding-bottom: 810rpx;
  background-color: #ededed;
}

/**优惠卷**/

.box {
  margin: 40rpx auto;
}

.coupon-center {
  position: relative;
  width: 600rpx;
  height: 250rpx;
  margin-top: 30rpx;
  background-size: 100% 100%;
  padding: 5rpx 10rpx;
  display: flex;
  color: white;
  justify-content: row;
  overflow: hidden;
  border-radius: 25rpx;
}

.coupon-center-left {
  width: 75%;
  height: 100%;
  display: flex;
  padding-right: 5rpx;
  justify-content: space-between;
  border-right: 3rpx dashed #f7f7f7;
}

.coupon-center-left-left {
  width: 58%;
  height: 100%;
  line-height: 200rpx;
}

.money {
  position: absolute;
  font-size: 100rpx;
  font-weight: bold;
  bottom: 20rpx;
  left: 30rpx;
}

.world {
  font-size: 30rpx;
  color: white;
}

.coupon-center-left-right {
  width: 42%;
  height: 100%;
  padding-top: 10%;
  font-size: 35rpx;
  text-align: center;
}

.subtraction {
  font-size: 25rpx;
}

.text {
  font-size: 33rpx;
  margin-left: 13%;
  margin-top: 2%;
  color: rgb(145, 144, 144);
}

.coupont-center-right {
  width: 20%;
  height: 100%;
  position: relative;
  font-size: 28rpx;
  margin: 0 auto;
  padding-top: 12%;
  text-align: center;
}

.right {
  position: absolute;
  right: -10rpx;
  top: 86rpx;
  font-size: 35rpx;
}
