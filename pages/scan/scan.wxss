/**index.wxss**/

.container {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  font-size: 35rpx;
}

.container-top navigator {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 200rpx;
}

.container-top image {
  width: 100%;
  height: 100%;
}

.container-content {
  width: 100%;
  height: 230rpx;
}

.container-content-detail {
  width: 94%;
  height: 95%;
  margin: 0 2% 11% 2%;
  border-top: none;
}

.detail-content {
  width: 81%;
  height: 84%;
  margin: 0 3% 2% 5%;
  padding: 5% 6% 6% 6%;
}

.content-top {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-around;
  margin-top: 35rpx;
}

.content-top-image {
  width: 130rpx;
  height: 225rpx;
  text-align: center;
  font-size: 30rpx;
  color: #2f4f4f;
}

.content-top-image image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 30rpx;
}

.one image {
  width: 62rpx;
  height: 30rpx;
  margin-top: 20rpx;
}

.content-center {
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #2f4f4f;
}

.content-center image {
  width: 250rpx;
  height: 250rpx;
  margin-bottom: 20rpx;
}
