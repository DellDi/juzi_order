.caipin{
  width: 100%;
  height:90rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}
.line{
  width: 100%;
  height:16rpx;
  background-color:#e2e1e1;
  border-bottom:2rpx solid #d8d6d6;
  border-top:2rpx solid #d8d6d6;
}
.caipin-left{
   height: 100%;
   width:70%;
   display: flex;
  justify-content: row;
}
.caipin-left text{
  font-size: 35rpx;
  line-height: 80rpx;
  margin-left: 10rpx;
}
.caipin-left image{
  margin-top: 23rpx;
  margin-left: 40rpx;
  width:35rpx;
  height: 40rpx; 
}
.caipin-right{
  width: 200rpx;
  height: 100%;
}
.caipin-right button{
  margin-left: 0rpx;
  width: 150rpx;
  height:40rpx;
  background-color:#ff9933;
  padding: 5rpx 10rpx;
  font-size: 25rpx;
  color: white;
  line-height: 30rpx;
  margin-top:25rpx; 
  box-shadow:1rpx 3rpx 2rpx 2rpx rgb(189, 185, 185); 
}
.hidden{
 display: none;
}
.show{ 
 display: block;

}
