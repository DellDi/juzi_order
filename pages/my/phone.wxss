.container{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  border-top: 4rpx solid #e3e3e3;
} 
.detail{
  width: 80%;
  height: 100%;
  margin: 0 auto;
}
.detail-top{
  display: flex;
  justify-content: row;
  font-size: 29.5rpx;
  line-height: 120rpx;
  font-weight: bold;

}
.detail-top image{
  width: 35rpx;
  height:34rpx; 
  margin-top: 46rpx;
  margin-right: 15rpx;
}
.section {
  width: 100%;
  height:78rpx;
  display: flex;
  justify-content: row;
  font-size: 35rpx;
  border: 2rpx solid #aca9a9;
  border-radius: 10rpx;
  margin-bottom: 60rpx;
}
.section-left {
  font-size: 31rpx;
  font-weight: bold;
  line-height: 80rpx;
  width: 200rpx;
  display: flex;
  justify-content: row;
  margin-right: 50rpx;
}
.section-left image,.section-one image{
  width: 30rpx;
  height:35rpx; 
  margin: 25rpx 10rpx 0 10rpx;
}
.two image{
  width: 35rpx;
  height:25rpx; 
  margin: 30rpx 6rpx 0 10rpx;
}
.one image{
  width: 20rpx;
  height:34rpx; 
  margin: 25rpx 10rpx 0 10rpx;
}
 input{
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  margin-right: 50rpx;
}
.section-one{ 
  width: 100%;
  height:100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 80rpx;
  }
  .section-one-left{
  width: 320rpx;
  height:75rpx;
  display: flex;
  justify-content: row;
  border: 2rpx solid #838282;
  border-radius: 10rpx;

}
.section-one-left-left{
  font-size: 31rpx;
  font-weight: bold;
  line-height: 80rpx;
  width: 140rpx;
  display: flex;
  justify-content: row;
}
.section-one-left-right input{
  width: 160rpx;
  height: 100%;
  font-size: 27rpx;
  margin: 0;
  margin-left:15rpx;
}
.section-one-right button{
  font-size:30rpx;
  color: white;
  background-color: #ff9934;
  width:220rpx;
  height: 78rpx;
  line-height: 78rpx;
  box-shadow: 1rpx 3rpx 3rpx 1rpx #b4b2b2;
}

.fotter button {
  color: white;
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  background-color:#ff9934; 
  font-size: 33rpx;
  box-shadow: 1rpx 3rpx 3rpx 1rpx #b4b2b2;
}
