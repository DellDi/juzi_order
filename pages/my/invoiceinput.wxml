<!--index.wxml-->
<view class="container">
   <view class="lin"></view>
    <view class="detail">
        <form bindsubmit="formSubmit" bindreset="formReset">
            <view class="section">
                <view class="section-left">
                    <image src="/img/my/invoicetopinput.4.png"></image>
                 </view>
                <view class="section-right">
                    <view class="section-right-left">
                        <text>公司名称</text>
                      </view>
                    <view class="section-right-right">
                        <input type="text" name='company_name' placeholder="公司名称（必填)"></input>
                      </view>
                 </view>
              </view>

              <view class="section">
                <view class="section-left">
                    <image src="/img/my/invoicetopinput.5.png"></image>
                    </view>
                <view class="section-right">
                    <view class="section-right-left">
                        <text>税号</text>
                      </view>
                    <view class="section-right-right">
                        <input name='tax_num' type="text" placeholder="15-12位（必填)" maxlength="20"></input>
                     </view>
                  </view>
              </view>

              <view class="section">
                 <view class="section-left">
                    <image src="/img/my/invoicetopinput.7.png"></image>
                     </view>
                 <view class="section-right">
                    <view class="section-right-left">
                        <text>单位地址</text>
                      </view>
                    <view class="section-right-right">
                        <input name='company_address' type="text" placeholder="请输入需要开票的公司地址" ></input>
                     </view>
                 </view>
               </view>

              <view class="section">
                <view class="section-left">
                    <image src="/img/my/invoicetopinput.3.png"></image>
                   </view>
                 <view class="section-right">
                     <view class="section-right-left">
                         <text>电话号码</text>
                       </view>
                     <view class="section-right-right">
                        <input  name='invoice_phone' type="text" placeholder="请输入需要开票的公司电话"></input>
                       </view>
                   </view>
               </view>

              <view class="section">
                 <view class="section-left one">
                    <image src="/img/my/invoicetopinput.6.png"></image>
                   </view>
                 <view class="section-right">
                     <view class="section-right-left">
                          <text>开户银行</text>
                        </view>
                      <view class="section-right-right">
                           <input name='invoice_bank' type="text" placeholder="请输入您公司的开户银行"></input>
                         </view>
                   </view>
                </view>

              <view class="section">
                   <view class="section-left">
                        <image src="/img/my/invoicetopinput.1.png"></image>
                     </view>
                   <view class="section-right">
                       <view class="section-right-left">
                           <text>银行账户</text>
                         </view>
                       <view class="section-right-right">
                           <input  name='bank_account' type="text" placeholder="请输入您公司的开户银行的账号">
                           </input>
                         </view>
                     </view>
                 </view>

               <view class="section"> 
                    <view class="section-left">
                        <image src="/img/my/invoicetopinput.2.png"></image>
                       </view>
                    <view class="section-right">
                       <view class="section-right-left">
                            <text>备注</text>
                         </view>
                        <view class="section-right-right">
                             <input name='invoice_remark' type="text" placeholder="可以填写服务名称"></input>
                           </view>
                       </view>
                 </view>
       
         <view class="fotter">
             <text>*请完整填写以上信息</text>
             <button formType="submit">保存</button> 
           </view>
       </form>
     </view>
 </view>
