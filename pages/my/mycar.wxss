page {
  padding-bottom: 30rpx;
}

/* 头部 */

.nav {
  width: 100%;
  height: 44px;
  display: flex;
  flex-direction: row;
  background: #fff;
}

.default {
  justify-content: center;
  align-items: center;
  width: 50%;
  display: flex;
  flex-direction: column;
}

.default text {
  font-size: 18px;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 63px;
  height: 26px;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
}

.red {
  justify-content: center;
  align-items: center;
  width: 50%;
  display: flex;
  flex-direction: column;
  margin-bottom: -17px;
}

.red text {
  font-size: 18px;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 63px;
  height: 26px;
  background: rgba(23, 196, 112, 0.1);
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
}

.rselected {
  width: 16px;
  height: 16px;
}

.line-top {
  width: 89%;
  height: 7px;
  margin-left: 5.5%;
  background: rgba(23, 196, 112, 1);
}

.body {
  width: 89%;
  height: 1049px;
  margin-left: 5.5%;
  margin-top: 6px;
  background: rgba(241, 241, 241, 0.4);
  display: flex;
  justify-content: center;
}

.show {
  display: block;
  width: 87.7%;
}

.hidden {
  display: none;
}

.detail {
  width: 100%;
  height: 86%;
}

/* 优惠券 */

.content {
  border-radius: 25rpx;
  width: 100%;
  height: 121px;
  background-size: 100% 100%;
  margin-top: 23px;
}

.isOverdue {
  background-image: url('https://diancan.zhonghaokeji.net/img/my/coupon.3.png');
}

.notOverdue {
  background-image: url('https://diancan.zhonghaokeji.net/img/my/coupon.2.png');
}

.content-center {
  display: flex;
  justify-content: space-between;
  position: relative;
  width: 100%;
  height: 180rpx;
}

.content-center image {
  position: absolute;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  top: 40rpx;
  right: 80rpx;
}

.content-center-left {
  margin-left: 50rpx;
  width: 160rpx;
  height: 100%;
  font-size: 45rpx;
  line-height: 200rpx;
  color: white;
  display: flex;
  flex-direction: column;
}

.content-center-right {
  margin-top: 50rpx;
  text-align: center;
  font-weight: bold;
  line-height: 40rpx;
  padding-right: 30rpx;
}

.voucher_money {
  display: flex;
}

.money {
  font-size: 80rpx;
}

.voucher_content {
  font-size: 26rpx;
  color: #fff;
  margin-top: 64rpx;
  margin-left: -40rpx;
}

.content-center-right-list {
  width: 100%;
  font-size: 26rpx;
  color: white;
}

.content-fotter {
  width: 100%;
  font-size: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 10rpx;
}

.use {
  font-size: 26rpx;
  margin-left: 40rpx;
}

.detail-fotter {
  margin-top: 30rpx;
  margin-bottom: 40rpx;
  font-size: 33rpx;
  color: #7c7a7a;
}
