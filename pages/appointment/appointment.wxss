.container{
 width: 100%;
 height: 100%;
 margin: 0;
 padding: 0;
}
.detail{
 width: 100%;
 height: 100%;
 margin: 0;
 padding:0;
}

/**头部**/

.detail-top{
  position:relative;
  width:88%;
  height: 88%; 
  padding:6% 6%;
}
.detail-top-content{
  display: flex;
  justify-content: space-between;
  margin: 2% 0% 2% 2%;
  width: 98%;
  height: 96%; 
}
.detail-top-content-left{
  width: 30%;
  height:100%;
  margin-right: 60rpx;
}
.detail-top-content-left image{
  width: 200rpx;
  height: 180rpx; 
}
.detail-top-content-right{
  width: 55%;
  height:100%;
}
.list{
  font-size: 30rpx;
  color: black;
  margin-top: 18rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}

/**中间**/
.detail-content{
  margin-bottom: 295rpx;
  width: 100%;
  height: 100%;
}
.detail-content-time image,.detail-content-num image,.detail-content-name image,.detail-content-tel image{
    width: 30rpx;
    height: 30rpx;
    margin-top: 20rpx;
    margin-right: 20rpx;
}
.detail-content-time,.detail-content-num,.detail-content-name,.detail-content-tel{
  width: 88%;
  height: 90rpx;
  background-color: #fff;
  color: black;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  line-height: 80rpx;
  padding: 0 6%;
  font-weight: 590;
  border-top: 3rpx solid #f3f1f1;
}
.detail-content-tel{
  border-bottom: 3rpx solid #f3f1f1;
}
.detail-content-time-right,.detail-content-num-right,.detail-content-name-right,.detail-content-tel-right{
  font-size: 28rpx;
  color: #969494;
}
.detail-content-name-right input,.detail-content-tel-right input{
    width: 230rpx;
    height: 100%;
    font-size: 28rpx;
    text-align: right;
}

/**尾部**/

.detail-content-fotter{
  display: flex;
  justify-content: space-between;
  width: 85%;
  height: 85rpx;
  margin: 50rpx auto;
}

.button{
  display: flex;
  justify-content: space-between;
  width:243rpx;
  height: 78rpx;
  border-radius: 10rpx;
  margin-top:20rpx;
  padding: 0 35rpx;
  background-color: #ff9933;
}

.button image{
  width: 38rpx;
  height:38rpx;
  margin-top: 25rpx;
}
.adr{
  font-size: 33rpx;
  color: #fff;
   margin-top: 0rpx;
}