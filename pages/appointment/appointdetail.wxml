<!--pages/appointment/apponintdetail.wxml-->
<view class="container">
    <view class="container-detail">
    <!--头部-->
       <view class="detail-top">
              <text>桔子餐饮（{{shop_name}}）</text>
       </view>

     <!--中间-->
       <view class="detail-center">
         <!--订单编号-->
              <view class="detail-center-list">
                  <view class="detail-content-left">
                    <image src="/img/appointment/appointment.8.png"></image>
                      <view>订单编号</view>
                  </view>
                  <view class="detail-content-right">
                     <text>{{order_num}}</text>
                  </view>
              </view>
         <!--下单时间-->
              <view class="detail-center-list">
                  <view class="detail-content-left">
                      <image src="/img/appointment/appointment.9.png"></image>
                      <view>下单时间</view>
                  </view>
                  <view class="detail-content-right">
                     <text>{{order_time}}</text>
                  </view>
              </view>
         <!--订单形式-->
               <view class="detail-center-list">
                  <view class="detail-content-left">
                      <image src="/img/appointment/appointment.10.png"></image>
                      <view >订单形式</view>
                      <image src="/img/appointment/appointment.14.png" style=" width: 35rpx;height: 35rpx;margin-top: 50rpx;margin-left: 15rpx;"></image>
                     </view>
                  <view class="detail-content-right">
                       <text>{{reservedate}}</text>
                     </view>
                  </view>

              <view class="detail-center-list">
                  <view class="detail-content-left">
                      <image src="/img/appointment/appointment.2.png"></image>
                      <view>座位号</view>
                  </view>
                  <view class="detail-content-right">
                     <text>{{table_num}}</text>
                  </view>
               </view>

              <!--取消订单，我已到店--> 
              <view class="content-fotter">
                  <view class="fotter"  data-appointid="{{id}}" bindtap='cancel_appoint'>
                      <view class="fotter-left">
                          <image src="/img/appointment/appointment.11.png"></image>
                          <view class="fotter-text">取消订单</view>
                         </view> 
                     </view>
                     
                  <view class="fotter one" >
                      <navigator url="../menu/menu">
                          <image src="/img/appointment/appointment.13.png"></image>
                          <view class="fotter-text">立即点餐</view>
                         </navigator> 
                     </view>
                 </view> 
          </view>  
    </view>
</view>

