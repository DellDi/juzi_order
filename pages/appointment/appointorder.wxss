/* pages/appointment/appointorder.wxss */
/**index.wxss**/
.detail{
   width: 100%;
   height:100%;
   margin: 0;
   padding: 0;
   color: rgb(83, 83, 82);
}
/* 已点菜品*/
.ing{
  width: 90%;
  height: 94%;
  margin: 3% 5%;
}

.caipin-left {
 height: 60rpx;
 width: 100%;
 font-size: 35rpx;
 line-height: 60rpx;
 padding-left: 10rpx;
 display: flex;
 justify-content: row;
}

.caipin-left image{
  margin-top: 23rpx;
  margin-left: 35rpx;
  width:35rpx;
  height: 35rpx; 
}
.caipin-right{
  display: flex;
  justify-content: space-between;
}
.caipin-right button{
  width: 150rpx;
  height:48rpx;
  background-color:#fcb167;
  padding: 6rpx 10rpx;
  font-size: 26rpx;
  color: white;
  line-height: 35rpx;
  margin-top:25rpx; 
  box-shadow:1rpx 3rpx 2rpx 2rpx rgb(206, 204, 204); 
}
.contair-detail-list{
  display: flex;
  justify-content: row;
}
.contair-detail-list text{
   font-size: 32rpx;
   line-height: 50rpx;
}

.line{
  width: 100%;
  height:8rpx;
  background-color:rgb(238, 237, 237);
  border-bottom:2rpx solid #ebeaea;
  border-top:2rpx solid #e4e3e3;
}