/* pages/appointment/apponintdetail.wxss */

page {
  background: #f3f2f2;
}

.container {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}

.container-detail {
  width: 100%;
  height: 100%;
}

/**头部**/

.detail-top {
  width: 100%;
  height: 96rpx;
  background-color: #f3f2f2;
  display: flex;
  align-items: center;
}

.detail-top text {
  margin-left: 5px;
  font-size: 15px;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
}

.detail-top image {
  width: 13px;
  height: 13px;
  margin-left: 5.8%;
}

/**中间**/

.detail-center {
  width: 92%;
  height: 434px;
  background-color: #fff;
  margin-left: 4%;
}

.detail-center-list {
  width: 94.2%;
  padding-top: 30px;
  border-bottom: 1px solid #eee;
  font-size: 15px;
  display: flex;
  justify-content: space-between;
  padding-bottom: 10px;
  margin-left: 2.9%;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
}

.detail-content-left {
  width: 34.2%;
  display: flex;
  margin-left: 1%;
  align-items: center;
}

.detail-content-left image {
  width: 18px;
  height: 18px;
  margin-left: 14px;
}

.detail-content-right text {
  font-size: 30rpx;
  font-family: PingFang SC;
  color: rgba(102, 102, 102, 1);
}

/**中间底部**/

.content-fotter {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.fotter {
  margin-left: 7.5%;
}

.fotter button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120px;
  height: 70rpx;
  margin-top: 105px;
  font-size: 15px;
  border: none;
  color: #fff;
  background: rgba(23, 196, 112, 1);
}

.fotter-one {
  margin-right: 7.5%;
}

.fotter-one button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120px;
  height: 70rpx;
  margin-top: 105px;
  font-size: 15px;
  border: none;
  background: rgba(23, 196, 112, 1);
  color: #fff;
}
