/* pages/appointment/apponintdetail.wxss */
.container{
  width:100%;
  height: 100%;
  margin: 0;
  padding: 0;
}
.container-detail{
  width: 100%;
  height: 100%;
  background-color:#fff;
}

/**头部**/
.detail-top{
  width: 100%;
  height: 85rpx;
  background-color:#f9f9f9; 
  border-bottom: 6rpx solid #ececec;
  text-align: center;
}
.detail-top text{
  margin-left:30rpx;
  font-size: 38rpx;
  font-weight: 590;
  line-height: 85rpx;
  font-family: '黑体';
}
/**中间**/

.detail-center{
  width: 100%;
  height: 100%;
  margin-bottom: 40rpx;
}
.detail-center-list{
  width: 88%;
  height: 130rpx;
  padding: 0 6%;
  border-bottom: 3rpx solid #e2e1e1;
  font-size: 34rpx;
  line-height:130rpx; 
  font-weight: 590;
  font-family: '黑体';
  display: flex;
  justify-content: space-between;
  background-color: #f9f9f9;
}
.detail-content-left{ 
  width: 37%;
  display: flex;
  justify-content: row;
}
.detail-content-left image{
  width: 30rpx;
  height: 30rpx;
  margin-top: 50rpx;
  margin-right: 15rpx; 
}
.detail-content-right text{
  color:#8c8985;
}

/**中间底部**/
.content-fotter{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  margin: 80rpx auto;
}

.fotter{
  width: 250rpx;
  height: 85rpx;
  background-color:#ff9934; 
  margin: 0 auto;
  border-radius: 5rpx;
  display: flex;
  justify-content: row;
}
  .fotter-left ,.one navigator{
  display: flex;
  justify-content: row;
  padding: 0 40rpx 0 45rpx;

  }
.fotter image{
  width: 26rpx;
  height: 30rpx;
  margin-top: 29rpx;
  margin-right: 10rpx;
}
.one  image{
  width: 31rpx;
  height: 31rpx;
  margin-top: 29rpx;
  margin-right: 10rpx;
}
.fotter-text{
  font-size: 30rpx;
  color: white;
  line-height: 85rpx;
}