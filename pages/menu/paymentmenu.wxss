/**index.wxss**/
page{
 background: #F5F2F0;
}
.container{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
} 
.lin{
  width: 100%;
  height: 5rpx;
  background-color:#F5F2F0; 
  box-shadow:1rpx 1rpx 10rpx 1rpx #F5F2F0; 
  margin-bottom: 8rpx;
}
.detail{
  width: 100%;
  height: 100%;
  margin: 0 auto;
  position: relative;
}
.section{
  width: 100%;
  height:100%;
  display: flex;
  justify-content: row;
  background-color: #fff;
}
.section-left image{
  width: 25rpx;
  height:33rpx; 
  margin-right: 10rpx;
  margin-top: 35rpx;
  margin-left: 10rpx;
}
.one image{
  width: 32rpx;
  height:32rpx; 
  margin-right: 5rpx;
  margin-top: 38rpx;
}
.two image{
  width: 35rpx;
  height:25rpx; 
  margin-right: 0rpx;
  margin-top: 40rpx;
}
.section-right {
   display: flex;
   justify-content: space-between;
   font-size: 33rpx;
  line-height: 100rpx;
  padding: 0 1%;
  width: 98%;
  height: 100%;
   border-bottom: 2rpx solid #F5F2F0;
}
.section-right-right{
  display: flex;
  justify-content: row;
}
.section-right-right text{
  width: 100%;
  height: 100%;
  font-size: 31rpx; 
  color:#999696;
  margin-top: 20rpx;
}
.red{
  color:red;
}
.section-right-right image{
  height:35rpx;
  width: 35rpx;
  border-radius: 50%;
  float: right;
  margin-top: 33rpx;
  margin-left:15rpx;
  }
.fotter{
  width: 100%;
  height: 90rpx;
  margin-top: 453rpx;
  position: fixed;
  color: white;
  font-size: 33rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ff9933;

}
