<!--pages/menu/voucher.wxml-->
<view class="line"></view>
<view class="detail">
              <view class="content"  wx:for="{{voucher}}"  data-id="{{item.binding_id}}" data-index="{{index}}" data-cutmonney='{{item.voucher_num}}'  bindtap="choseTxtColor"  style="{{uhide ==item.binding_id?'background-image: url(/img/my/coupon.2.jpg);background-size:100% 100%;':'background-image: url(/img/my/coupon.2.png);background-size:100% 100%;'}}" > 
                   <view class="content-center" >
                       <view class="content-center-left">
                           <text>¥</text>
                           <text class="money">{{item.voucher_num}}</text>
                         </view>
                       <view class="content-center-right">
                            <view class="content-center-right-list style {{item.full_money==null?'hidden':''}}">
                               <text>满{{item.full_money}}可用</text>
                              </view>
                            <view class="content-center-right-list">
                                 <text>桔子餐厅({{item.binding_shop}})</text>
                               </view>
                            <!-- <view class="content-center-right-list">
                                 <text>{{item.usertime}}</text>
                               </view> -->
                            </view>
                        </view>
                      <view class="content-fotter">
                         <view class="content-fotter-left">
                              <text>使用期限： {{item.start_time}} ~ {{item.end_time}}</text>
                              <text class="use">{{item.use}}</text>
                            </view>
                         </view> 
                    </view>
    </view>



