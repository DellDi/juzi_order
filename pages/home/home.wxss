/* pages/home/home.wxss */

.container{
  width: 100%;
  height: 100%px;
}

/* 头部 */
.top{
   display: flex; 
   width: 92%;
   height: 70rpx;
   padding:25rpx  5.5% 10rpx 2.5%;
   justify-content: space-between;

 }
 /* 头部左 */
 .top-left{
   width: 58%;
   position: relative;
   display: flex; 
  justify-content: space-between;
 }
.city{
  display:block;
  float: left; 
  font-size: 25rpx;
  width: 10%;
  height: 100%; 
}
.city image{
  width: 53rpx;
  height: 55rpx;
  margin:0 auto; 
  margin-top: 5rpx;
}
.phone_personal{
    width: 82%;
    padding-left: 15rpx;
    color: #222121;
    height:60rpx;
    font-size: 33rpx;
    line-height:55rpx;
}
.phone_one{
    display: flex; 
    position: relative;
    justify-content: space-between;
    background-color:#fff;
    width:85%;
    height:55rpx;
    margin-left: 20rpx;
    border-radius: 10rpx;
    border:4rpx solid #f5f5f5;
}
.person_box{
    position: relative;
}
.phone_select{
    margin-top:0;
    z-index: 100;
    position: absolute; 
    margin-left:10%;
    height: 60rpx;
    width: 100%;
}
.select_one{
    text-align: left;
    background-color:#fff;
    width:280rpx; 
    height:60rpx;
    line-height:65rpx;
    padding-left: 10rpx; 
    border-bottom:2rpx solid #f5f5f5;
    font-size: 33rpx;
    color: #666666;
}
.personal_image{
    z-index: 100;
    position: absolute;
    right:2.5%;
    width: 34rpx;
    height: 30rpx;
    margin:10rpx 5rpx 5rpx 20rpx;
    transition: All 0.4s ease;  
    -webkit-transition: All 0.4s ease;
}
.rotateRight{
    transform: rotate(180deg); 
} 
 
/* 头部右 */
.top-right{
  display:flex;
  justify-content: space-between;
  font-size: 33rpx;
  width: 42%;
  height: 50rpx;
  line-height: 60rpx;
}
.weather{
  font-size: 32rpx;
  margin-left:-36rpx;
}
.stores {
  margin-left: 25rpx;
  width: 50%;
  height: 100%;
}
 .stores navigator{
  display: flex;
  justify-content: row;
 }
.stores navigator image {
   width: 33rpx;
   height: 42rpx;
   margin-top: 13rpx;
   margin-left: 15rpx;
}
  /* 搜索框 */
