/* pages/home/home.wxss */

.container {
  width: 100%;
  height: 100%px;
}

/* 头部 */

.top {
  display: flex;
  width: 91%;
  justify-content: space-between;
  margin-left: 4.5%;
  margin-top: 15px;
}

/* 头部左 */

.top-left {
  width: 80%;
  position: relative;
  display: flex;
  justify-content: space-between;
}

.city {
  display: flex;
  font-size: 12px;
  width: 27px;
  height: 29px;
  margin-right: 19px;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  opacity: 1;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
}

.phone_personal {
  width: 85%;
  height: 14px;
  font-size: 14px;
  color: rgba(51, 51, 51, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.phone_one {
  display: flex;
  position: relative;
  background-color: #fff;
  width: 87%;
  height: 28px;
  border: 2rpx solid #f5f5f5;
  align-items: center;
}

.person_box {
  position: relative;
}

.phone_select {
  margin-top: 60rpx;
  z-index: 100;
  position: absolute;
  margin-left: 15%;
  height: 60rpx;
}

.img {
  width: 10px;
  height: 14px;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.select_one {
  text-align: left;
  background-color: #fff;
  width: 403rpx;
  height: 60rpx;
  line-height: 65rpx;
  padding-left: 22rpx;
  border-bottom: 2rpx solid #f5f5f5;
  font-size: 26rpx;
  color: rgba(51, 51, 51, 1);
  margin-left: 40rpx;
}

.personal_image {
  z-index: 100;
  position: absolute;
  right: 3%;
  width: 12px;
  height: 7px;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
}

.rotateRight {
  transform: rotate(180deg);
}

/* 头部右 */

.top-right {
  display: flex;
  justify-content: space-between;
  font-size: 90%;
  width: 18%;
  height: 50rpx;
  line-height: 60rpx;
}

.weather {
  font-size: 32rpx;
  margin-left: -36rpx;
}

.stores {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  margin-top: 5rpx;
  color: rgba(51, 51, 51, 1);
}

.stores image {
  width: 13px;
  height: 13px;
  margin-left: 10px;
  margin-right: 7px;
}

/* 搜索框 */

.top-top2 {
  display: flex;
  width: 91%;
  justify-content: space-between;
  margin-bottom: 25rpx;
  margin-left: 4.5%;
}

.search-bar-left {
  display: flex;
  height: 30px;
  width: 100%;
  margin-top: 20rpx;
  align-items: center;
  background: #f1f1f5;
}

.search-bar-left-left image {
  height: 12px;
  width: 12px;
  margin-left: 25rpx;
  margin-right: 30rpx;
}

.search-bar-right image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
}

.select {
  font-size: 15px;
  padding-left: 5px;
}

/* 轮播图 */

swiper {
  height: 150px;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

/* 点餐，预约 */

.content {
  width: 100%;
  height: 90px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.order {
  display: flex;
  flex-direction: column;
  color: rgba(51, 51, 51, 1);
  width: 33%;
  text-align: center;
  font-size: 15px;
}

.menu {
  width: 56px;
  height: 56px;
  margin-bottom: -13rpx;
  margin-top: 30rpx;
}

