/**index.wxss**/
.container {
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
  border-top: none;
} 
.container-top{
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-right: 20rpx;
  background-color:  #fff;
}
.search{
 width:78%;
 height: 55%;
 display: flex;
 justify-content: space-between;
 align-items: center;
 background-color: #f7f6f5;
 border-radius: 40rpx;
 border: 1rpx solid #f4f5f5;
 margin-left: 30rpx;
}
.input{
 width:80%;
 height: 100%;
 font-size: 13px;
 color:rgb(66, 63, 63);
}
.search image{
 width:40rpx;
 height: 40rpx;
 margin-left: 15rpx;
 margin-right: 15rpx;
}
.sosuo{
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
 color: rgb(82, 79, 79);
 font-size: 25rpx;
 border: none;
}
.title{
  width: 100%;
  height:40rpx; 
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.title text{
  font-size: 30rpx;
  color:rgb(161, 159, 159);
  margin-left: 25rpx;
}
.noHistoryItem{
  font-size: 28rpx;
  color: rgb(27, 26, 26);
  line-height: 40rpx;
  font-weight: 590;
  margin-left: 30rpx;
}
.title image{
  width: 33rpx;
  height: 33rpx;
  margin-right: 15rpx;
}
.container-content{
  width: 97%;
  height: 97%;
  padding: 1.5%;
}
.list{
  display: flex;
  justify-content: row;
  border: 3rpx solid rgb(223, 221, 221);
  width: 96%;
  height: 96%;
  padding: 2%;
  margin-bottom: 12rpx;
}

.list image{
    width: 200rpx;
    height: 150rpx;
    margin-right: 40rpx;
}
.container-content-right{
  margin-top: 20rpx;
}
.fotter{
   display: flex;
   justify-content: row;
   font-size: 27rpx;
   color: rgb(180, 178, 178);
   margin-top: 3rpx;
}
.foodname{
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}
.month{
  font-size: 27rpx;
  color: rgb(180, 178, 178);
}
.red{
  margin-right: 15rpx;
}
.htrItemContent{
  width: 100%;
  display: flex;
  /* justify-content: space-around; */
  flex-wrap: nowrap;
   /* margin-top: 25rpx; */
}
.htrItem{
  border: 1px solid #f7f6f5;
  font-size:25rpx;
  color:rgb(161, 159, 159); 
  margin:20rpx 15rpx 0px 25rpx;
  padding: 3px 3px 3px 3px;
  border-radius: 17rpx;
}
