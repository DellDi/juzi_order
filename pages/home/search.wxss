/**index.wxss**/

.container {
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
  border-top: none;
}

.container-top {
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-right: 20rpx;
  background-color: #fff;
}

.search {
  width: 78%;
  height: 60%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f7f6f5;
  border-radius: 40rpx;
  border: 1rpx solid #f4f5f5;
  margin-left: 30rpx;
}

input {
  width: 80%;
  height: 100%;
  font-size: 26rpx;
  color: rgb(73, 73, 73);
}

.search image {
  width: 30rpx;
  height: 27rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

button {
  width: 100rpx;
  height: 60rpx;
  line-height: 50rpx;
  color: rgb(82, 79, 79);
  font-size: 30rpx;
  padding: 5rpx 10rpx;
}

.title {
  width: 100%;
  height: 40rpx;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.titles {
  font-size: 30rpx;
  margin-left: 100rpx;
  color: rgb(128, 125, 125);
}

.title text {
  font-size: 26rpx;
  color: rgb(165, 163, 163);
  margin-left: 38rpx;
}

.noHistoryItem {
  font-size: 28rpx;
  color: rgb(27, 26, 26);
  line-height: 40rpx;
  font-weight: 590;
  margin-left: 30rpx;
}

.title image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.container-content {
  width: 97%;
  height: 97%;
  padding: 1.5%;
}

.list {
  display: flex;
  justify-content: row;
  border: 3rpx solid rgb(223, 221, 221);
  width: 96%;
  height: 96%;
  padding: 2%;
  margin-bottom: 12rpx;
}

.list image {
  width: 200rpx;
  height: 150rpx;
  margin-right: 40rpx;
  margin-top: 10rpx;
}

.fotter {
  display: flex;
  justify-content: row;
  font-size: 27rpx;
  color: rgb(180, 178, 178);
  margin-top: 3rpx;
}

.foodname {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.month {
  font-size: 27rpx;
  color: rgb(180, 178, 178);
}

.red {
  margin-right: 15rpx;
}

.htrItemContent {
  width: 100%;
  margin-left: 38rpx;
  margin-top: 25rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: row;
}

.htrItem {
  border: 1px solid #f7f6f5;
  font-size: 26rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  padding: 3px 3px 3px 3px;
  border-radius: 10rpx;
  background-color: #f7f6f5;
}
