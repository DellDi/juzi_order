// pages/shop/shop.js
//获取应用实例
const app = getApp()

Page({
  data: {
    item: [
      {
        "name": "",
        "num": "",
        "dec": ""
      },
      {
        "name": "",
        "num": "",
        "dec": ""
      },
      {
        "name": "",
        "num": "",
        "dec": ""
      }

    ]
  },
  //事件处理函数
  bindmap: function () {
    wx.navigateTo({
      url: '../logs/logs'
    })
  },
  bindcity: function () {
    wx.navigateTo({
      url: '../logs/logs'
    })
  },
  onLoad: function () {
    var that = this;
    that.get_shop_info();
    if (app.globalData.userInfo) {
      this.setData({
        userInfo: app.globalData.userInfo,
        hasUserInfo: true
      })
    } else if (this.data.canIUse) {
      // 由于 getUserInfo 是网络请求，可能会在 Page.onLoad 之后才返回
      // 所以此处加入 callback 以防止这种情况
      app.userInfoReadyCallback = res => {
        this.setData({
          userInfo: res.userInfo,
          hasUserInfo: true
        })
      }
    } else {
      // 在没有 open-type=getUserInfo 版本的兼容处理
      wx.getUserInfo({
        success: res => {
          app.globalData.userInfo = res.userInfo
          this.setData({
            userInfo: res.userInfo,
            hasUserInfo: true
          })
        }
      })
    }
  },
  getUserInfo: function (e) {
    console.log(e)
    app.globalData.userInfo = e.detail.userInfo
    this.setData({
      userInfo: e.detail.userInfo,
      hasUserInfo: true
    })
  },
  get_shop_info: function () {
    var that = this;
    wx: wx.request({
      url: getApp().globalData.domain + 'Index/get_shop_info',
      method: 'GET',
      data: { latitude: wx.getStorageSync('latitude'), longitude: wx.getStorageSync('longitude'), openid: wx.getStorageSync('openid') },
      header: {
        'Accept': 'application/json'
      },
      success: function (res) {
        console.log(res)
        that.setData({
          shop_name: res.data,
          currentaddress: wx.getStorageSync('currentaddress')
        })


      },
      fail: function (res) { },
      complete: function (res) { },
    })
},
  storedetail:function(e){
    // console.log(e)
    var storeid = e.currentTarget.dataset.index;
    wx.navigateTo({
      url: './storedetails?id='+storeid
    })
  }
})
