/* pages/shop/storedetails.wxss */
.container{
  width:100%;
  height: 100%;
  margin-bottom: 40rpx;
}

/**轮播图**/
.my-swiper image{
  width: 100%;
  height: 600rpx;
}
.wrap{
	display: inline-block;
	margin-top: .8rem;
}
.wrap-item{
	display: inline-block;
	width: 33%;
	height: 6rem;
	line-height: 6rem;
	border-bottom: 1px solid #ddd;
	background-color: #fff;
	text-align: center;
}
 /*不支持 :nth-child(2);*/
.wrap-item.exp{
	border: 1px solid #ddd;
	border-top: 0;
}
/**餐厅介绍**/
.content{
  width: 100%;
  height: 100%;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 35rpx; 
  background-color: #ff9934;
}
.content-detail{
 width:94%;
 height: 100%; 
  padding:28rpx 3%;
}
.content-detail-top{
  height: 100%;
  width: 100%;
}
.content-detail-top-text text{
  font-size: 40rpx;
  color: white;
}
.content-detail-top-money {
   font-size: 28rpx;
    color: white;
    margin-top: 10rpx;
}
.money{
  width: 70rpx;
  height: 40rpx;
  background-color: #ffffff;
  border-radius: 50%;
  color:#ff9934;
  font-size: 28rpx;
  margin-right: 10rpx;
}
.content-detail-center{
  padding: 15rpx 30rpx;
  background-color: #fff;
  border-radius: 30rpx;
  margin-top: 30rpx;
}
.list{
  display: flex;
  justify-content: column;
  font-size: 30rpx;
  font-weight: 600;
  line-height: 55rpx;
}
.world{
  font-size: 28rpx;
  font-weight:500;
}

/**拨打电话**/
.content-detail-fotter{
  display: flex;
  justify-content: space-between;
  width: 85%;
  height: 80rpx;
  margin: 20rpx auto;
}
.content-detail-fotter-button{
  display: flex;
  justify-content: column;
  width: 33%;
  height: 65rpx;
  background-color: #fff;
  border-radius: 45rpx;
  margin-top:15rpx;
  padding: 0 15rpx;
}
.content-detail-fotter-button navigator{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: row;
}
.content-detail-fotter-button image{
  width: 40rpx;
  height:40rpx;
  margin-top: 14rpx;
  margin-right:15rpx; 
}
.adr{
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #ff9934;
}
.coupon{
  width:100%;
  height: 100%; 
}
.coupon-top{
  display: flex;
  justify-content: space-between;
  font-size: 40rpx;
  color: white;
  margin-top: 15rpx;
}
.coupon-top-text{
  font-size: 30rpx;
  margin-top: 5rpx;
}
.coupon-center{
  position: relative;
  width:94%;
  height: 100%; 
  background-color: #fff;
  border-radius: 30rpx;
  padding: 30rpx 3%;
}
.coupon-center image{
  width:200rpx;
  height: 100rpx;
  margin-top: 12rpx; 
}
.coupon-button{
  position: absolute;
  top: 70rpx;
  left:140rpx;
  background-color:red;
  width: 50rpx;
  height: 50rpx;
}
.content-detail-list{
  margin-top: 50rpx;
  width:96%;
  height: 100%; 
  background-color: #fff;
  border-radius: 30rpx;
  padding: 15rpx 2%  5rpx 2%;
}
.detail-list{
  display: flex;
  justify-content: space-between;
  font-size:28rpx;
  color:#ff9934 ;
  border-bottom:4rpx dotted #ff9934;
}
.detail-list:last-child{
  border-bottom:none;
}
.detail-list-left{
  margin-top: 15rpx;
  width: 16%;
  height:58rpx;
  display: flex;
  justify-content: space-between;
}
.detail-list-left image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.detail-list-right{
  font-size: 26rpx;
  margin-top: 18rpx;
}
.etail-list-right-text{
   color: black;
}