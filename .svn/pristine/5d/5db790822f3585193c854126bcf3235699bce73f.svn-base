/* pages/my/user.wxss */
.userinfo {
  display: flex;
  width:100%;
  height: 230rpx;
  background-color: #FFB339;
}
.userinfo-avatar {
  width: 110rpx;
  height: 110rpx;
  margin-top: 60rpx;
  border-radius: 50%;
  margin-left: 40rpx;
  margin-right: 20rpx;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 32rpx;
  margin-top: 95rpx;
}
.mideal{
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 200rpx;
  border-bottom: 10px solid #eee;
}
.mideal-item{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin-top: 25rpx;
  border-right: 5px solid #eee;
  padding-right: 20rpx;
}
.mideal-item image{
  width:60rpx;
  height: 60rpx;
}
.mideal-item text{
  font-size: 33rpx;
  margin-top: 20rpx;
}
.user-item-xin{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
  align-items: center;
  border-bottom: 5rpx solid #eee;
 
}
.user-item-xin text{
  display: block;
  text-align: left;
  font-size: 35rpx;
}
.user-item-xin  image{
  width: 25px;
  height: 20px;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 7rpx;
}
.user-item{
  display: flex;
  justify-content: center;
}