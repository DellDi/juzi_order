<!--pages/home/home.wxml-->
<view class='container'>
  <view class='today'>
   <view class="info">
    <view class='city'>
        <image src='/img/16.png' class='image'/>
        <text class='chengshi'>{{city}}</text>
    </view>
   <view class="phone_one" bindtap="clickPerson">
  <view class="phone_personal">{{firstPerson}}</view>
  <image src="/icon/3.png" class="personal_image {{selectArea ? 'rotateRight' :''}}"></image> 
  </view>
<block >
   <view class="phone_select" hidden="{{selectPerson}}">
    <view wx:for="{{shop_name}}" class="select_one" bindtap="mySelect"  data-me="{{item.shop_name}}">{{item.shop_name}}</view>
     <!-- <view class="select_one" bindtap="mySelect" data-me="{{shop_name[2].shop_name}}">{{shop_name[2].shop_name}}</view>
      <view class="select_one" bindtap="mySelect" data-me="{{shop_name[3].shop_name}}">{{shop_name[3].shop_name}}</view> -->
  </view>
 </block>
  </view>
   <view class='temp'>
        <view >
        <navigator url="../shop/shop">
           {{today.wendu}}C
        </navigator>
        </view>
        <view class='weather'>{{today.todayInfo.type}}</view>
    </view>
  </view>

 
 <view class="search-bar">
    <icon type="search" size="30"/>
     <input class="select" bindchange="search" placeholder="搜索菜品"/>
 </view>

 <swiper indicator-dots="{{indicatorDots}}" autoplay='{{autoplay}}' interval='{{interval}}' duration='{{duration}}'>
 <block wx:for="{{image}}" >
  <swiper-item>
   <image src='{{item}}' data-src='{{item}}' bindtap="previewImage" />
  </swiper-item>
 </block> 
 </swiper>
<view class="content">
    <view class="order"> 
        <navigator url="../appointment/appointment">
           <image class="menu" src="/img/saoma.jpg"> </image>
        </navigator> 
        <text>预约</text>
    </view> 
    <view class="order" > 
      <navigator url="../queue/queue">
           <image class="menu" src="/img/saoma.jpg"> </image>
      </navigator> 
      <text>排号</text>
    </view>
    <view class="order" >  
      <navigator url="../index/index">
        <image class="menu" src="/img/saoma.jpg"> </image>
      </navigator> 
      <text>点餐</text>
    </view>  
</view>
  <view class="recent-orders">
  <view class="recent-orders-title">
    <view class="recent-orders-title-left">
      <view class="line-one"></view>
      <view class="line-two"></view>
    </view>
    <view class="recent-orders-title-right">
      <text class="left-text">最近订单 </text>
      <navigator url="../index/index">
        <text class="right-text">>></text>
      </navigator>
    </view>
  </view>
  <view class="recent-orders-content">
    <view class="recent-orders-content-left">
    <view class="list">
      <text>橘子餐饮({{latest_order.shop_name}}店)</text>
    </view>
    <view class="list">
      <text>订单号:</text>
      <text class="world">{{latest_order.order_num}}</text>
      </view>
      <view class="list">
      <text>下单时间:</text>
      <text class="world"> {{latest_order.order_time}}</text>
    </view>
    </view>
    <view class="recent-orderss-content-right">
      <view wx:if="{{latest.order_state == 0}}" class="ing">
        <navigator url="../index/index">
         ...正在进行
        </navigator>
      </view>
      <view wx:else="{{latest.order_state == 1}}" class="ing">
        <navigator url="../index/index">
         ...已完成
        </navigator>
      </view>
      <view class="totle">
        <text>总额:</text><text class="world-two">{{latest_order.total_order}}元</text>
      </view>
    </view>
   </view>
  </view>
