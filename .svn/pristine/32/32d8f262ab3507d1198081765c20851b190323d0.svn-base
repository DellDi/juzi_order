<!--pages/appointment/assignseat.wxml-->
<view class="container">
  <!--头部-->
  <view class="container-top">
      <view class="container-top-left">
        <view class="image">
          <image src="http://mz.djmall.xmisp.cn/files/logo/20161208/148117972563.jpg"></image>
          <view>可用</view>
        </view>
         <view class="image">
          <image src="http://mz.djmall.xmisp.cn/files/logo/20161208/148117972563.jpg"></image>
          <view class="right-text">不可用</view>
        </view>
      </view>
      <view class="container-top-right">
          <image src="http://mz.djmall.xmisp.cn/files/logo/20161208/148117972563.jpg" bindtap="click"></image>
      </view>
  </view>

  <!--内容-->
 <view class="container-content">
   <!--左侧栏-->
      <view class="nav_left">
        <block wx:for="{{cateItems}}">
      <!--当前项的id等于item项的id，那个就是当前状态-->
      <!--用data-index记录这个数据在数组的下标位置，使用data-id设置每个item的id值，供打开2级页面使用-->
          <view class="nav_left_items {{curNav == item.cate_id ? 'active' : ''}}" bindtap="switchRightTab" 
              data-index="{{index}}" data-id="{{item.id}}">{{item.table_location}}</view>
        </block>
      </view>
  <!--右侧栏-->
      <view class="nav_right">
    <!--如果有数据，才遍历项-->
          <view class='nei'>
              <view wx:if="{{cateItems[curIndex]}}">
                  <block wx:for="{{cateItems[curIndex].table}}">
                       <view class="nav_right_items {{ 0 == item.table_state ? 'unuse' : 'use'}}" bindtap='select_seat' data-value="{{item.table_location}}{{item.table_id}}号" data-id="{{item.table_id}}">
        <!--界面跳转 --> <view class="nav_right_items-top">
                            <!-- <image src="{{item.image}}"></image> -->
                            <view class="nav_right_items-top-text">{{item.content_table}}</view>
                        </view>
                        <text>{{item.table_location}}{{item.table_id}}号</text>
                     </view>
                  </block>
              </view>
    <!--如果无数据，则显示数据-->
              <view class="nodata_text" wx:else>该分类暂无数据</view>
          </view>
      </view>
  </view>
</view>


