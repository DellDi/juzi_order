<!--pages/my/user.wxml-->
<view class='container'>
   <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
     <view class='mideal'>
     <navigator url="../index/index"><view class='mideal-item'><image src='/img/saoma.jpg'></image><text>我的卡包</text></view></navigator>
       <navigator url="/pages/address/address"><view class='mideal-item'><image src='/img/saoma.jpg'></image><text>我的配送地址</text></view></navigator>
       <navigator url="../index/index"><view class='mideal-item'><image src='/img/saoma.jpg'></image><text>会员卡</text></view></navigator>
     </view>
    <view class='user-item-bottom'>
    <view class='user-item-xin'><view class='user-item'><image src='/img/saoma.jpg'></image><text>普通订单</text></view><navigator url="/pages/address/address"><image src='/img/saoma.jpg'></image></navigator></view>
       <view class='user-item-xin'><view class='user-item'><image src='/img/saoma.jpg'></image><text>外卖订单</text></view><navigator url="/pages/address/address"><image src='/img/saoma.jpg'></image></navigator></view>
      <view class='user-item-xin'><view class='user-item'><image src='/img/saoma.jpg'></image><text>发票信息</text></view><navigator url="/pages/address/address"><image src='/img/saoma.jpg'></image></navigator></view>
     </view>
</view>

